<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="vn.gcall.gcall2.AgentProfileActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:orientation="vertical"
        android:background="@drawable/background_call"
        android:id="@+id/layout_top">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:id="@+id/image_textDrawable"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/agent_name"
            android:textColor="#fff"
            android:textSize="25dp"
            android:layout_gravity="center"
            android:text="bang nguyen"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:background="#F0EFF5"
        android:id="@+id/layout_bottom"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:paddingLeft="10dp"
            android:background="#fff"
            android:layout_marginTop="10dp"
            android:paddingBottom="5dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/label_name"
                android:text="Full name :"
                android:textStyle="bold"
                android:textSize="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/profile_agent_name"
                android:layout_marginLeft="13dp"
                android:textSize="20dp"
                android:textColor="@color/primary"
                android:text="Bang Nguyen"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:background="#fff"
            android:paddingLeft="10dp"
            android:paddingBottom="5dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/label_email"
                android:text="Email :"
                android:textStyle="bold"
                android:textSize="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/profile_agent_email"
                android:layout_marginLeft="50dp"
                android:textSize="20dp"
                android:textColor="@color/primary"
                android:text="nxbang@gmail.com"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:paddingLeft="10dp"
            android:background="#fff"
            android:paddingBottom="5dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/label_phone"
                android:text="Phone :"
                android:textStyle="bold"
                android:textSize="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/profile_agent_phone"
                android:layout_marginLeft="43dp"
                android:textSize="20dp"
                android:textColor="@color/primary"
                android:text="0123456789"/>
        </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_change_pwd"
            android:text="Change password"
            android:textAllCaps="false"
            android:textColor="#f00"
            android:layout_marginTop="30dp"
            android:background="#fff"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            />
    </LinearLayout>

</LinearLayout>
