<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".SignUpActivity">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.9"
            android:background="@color/primary"
            android:orientation="vertical"
            android:paddingTop="40dp"
            android:paddingBottom="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:elevation="6dp"
            android:id="@+id/sign_up_header">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sign Up"
                android:textSize="35dp"
                android:gravity="center_horizontal|center_vertical"
                android:textColor="#fff"
                android:textStyle="bold"
                />
        </LinearLayout>
        <LinearLayout
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.2"
        android:id="@+id/sign_up_form"
        android:orientation="vertical"
        android:background="#ffffff">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/fulname_wrapper"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_fullname"
                android:paddingLeft="5dp"
                android:paddingRight="15dp"/>
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/input_fullname"
                android:hint="Full name"
                android:inputType="text"
                android:backgroundTint="@color/hint_color"
                android:textColorHint="@color/hint_color"
                android:textColor="@color/input_color"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/email_wrapper"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_email"
                android:paddingLeft="5dp"
                android:paddingRight="15dp"/>
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/input_email"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:backgroundTint="@color/hint_color"
                android:textColorHint="@color/hint_color"
                android:textColor="@color/input_color"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/phone_wrapper"
            >
            <ImageView
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_phonenumber"
                android:paddingLeft="5dp"
                android:paddingRight="15dp"/>
            <com.hbb20.CountryCodePicker
                android:id="@+id/countryCodePicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:contentColor="@color/primary"
                app:defaultNameCode="US"  />
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/input_phone"
                android:hint="Phone"
                android:inputType="phone"
                android:backgroundTint="@color/hint_color"
                android:textColorHint="@color/hint_color"
                android:textColor="@color/input_color"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/password_wrapper"
            >
            <ImageView
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_password"
                android:paddingLeft="5dp"
                android:paddingRight="15dp"/>
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/input_password"
                android:hint="Password"
                android:inputType="textPassword"
                android:backgroundTint="@color/hint_color"
                android:textColorHint="@color/hint_color"
                android:textColor="@color/input_color"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/confirm_password_wrapper"
                >
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_password"
                    android:paddingLeft="5dp"
                    android:paddingRight="15dp"/>
                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/input_confirm_password"
                    android:hint="Confirm Password"
                    android:inputType="textPassword"
                    android:backgroundTint="@color/hint_color"
                    android:textColorHint="@color/hint_color"
                    android:textColor="@color/input_color"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>
        <android.support.v7.widget.AppCompatButton
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_signup"
            android:text="Sign Up"
            android:textColor="#fff"
            android:textAlignment="center"
            android:textSize="20dp"
            android:background="@drawable/button_ripple"
            android:layout_gravity="center"
            android:elevation="6dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp">
        </android.support.v7.widget.AppCompatButton>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/link_login"
            android:text="Already have an account?"
            android:textSize="20dp"
            android:clickable="true"
            android:textColor="@color/primary"
            android:gravity="center"/>
    </LinearLayout>
</LinearLayout>

