<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:padding="5dip">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dip"
        android:id="@+id/thumbnail"
        android:orientation="vertical"
        android:layout_alignParentLeft="true">
        <ImageView
            android:layout_width="@dimen/list_title_size"
            android:layout_height="@dimen/list_title_size"
            android:id="@+id/list_item_image"
            android:src="@drawable/icon_gcall"
            android:layout_marginRight="5dip"/>
    </LinearLayout>
    <!--Hotline Number-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title_hotline_number"
        android:layout_toRightOf="@+id/thumbnail"
        android:textColor="#555555"
        android:textSize="@dimen/list_title_size"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/hiden_number"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hiden_type"
        android:visibility="gone"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:id="@+id/layout_number"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/numOfGroup"
            android:gravity="right"
            android:layout_marginRight="5dp"
            android:textSize="15dp"
            android:textColor="#555555"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/image_type"
            android:layout_alignParentRight="true"
            android:layout_alignRight="@id/numOfGroup" />
        <Button
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/btn_info"
            android:background="@drawable/info"
            android:layout_marginLeft="5dp"
            android:focusable="false"
            android:layout_alignRight="@id/image_type"
            android:layout_alignParentRight="true"/>
    </LinearLayout>
</RelativeLayout>
